{
    "id": "com.mattermost.recommend-plugin",
    "name": "Recommend",
    "description": "This plugin recommends you channels",
    "version": "0.0.1",
    "server": {
        "executables": {
            "linux-amd64": "server/dist/plugin-linux-amd64",
            "darwin-amd64": "server/dist/plugin-darwin-amd64",
            "windows-amd64": "server/dist/plugin-windows-amd64.exe"
        }
    },
    "webapp": {
        "bundle_path": "webapp/dist/main.js"
    },
    "settings_schema": {
        "header": "",
        "footer": "",
        "settings": [
            {
                "key": "RecommendOnJoinTeam",
                "display_name": "Recommend at team join",
                "type": "bool"
            },
            {
                "key": "RecommendOnJoinChannel",
                "display_name": "Recommend at channel join",
                "type": "bool"
            },
            {
                "key": "DBDriverName",
                "display_name": "Database Driver Name (mysql or postgresql)",
                "type": "text"
            },
            {
                "key": "DBDataSource",
                "display_name": "Database DSN connection string.",
                "type": "text"
            }
        ]
    }
}
